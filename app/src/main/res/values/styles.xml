<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:titleTextAppearance">@android:color/white</item>
    </style>

    <style name="FabMenuItemStyle">
        <item name="android:layout_width">@dimen/fabSizeSmall</item>
        <item name="android:layout_height">@dimen/fabSizeSmall</item>
        <item name="android:layout_alignTop">@+id/fabMenuController</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:background">@drawable/fab_menu_item</item>
        <item name="android:clickable">true</item>
        <item name="android:elevation">5dp</item>
    </style>

    <style name="pageIndicatorStyle">
        <item name="android:layout_width">@dimen/pageIndicatorSize</item>
        <item name="android:layout_height">@dimen/pageIndicatorSize</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginStart">5dp</item>
        <item name="android:layout_marginEnd">5dp</item>
        <item name="android:background">@drawable/page_indicator_normal</item>
    </style>

</resources>
